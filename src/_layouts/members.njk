---
layout: base
---

<article class="page">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
  </header>

  {{ content | safe }}

  <h3>{{ 'regional_networks' | i18n }}</h3>
  <ul>
    {% for member in members.regional_networks %}
    <li>{{ member.name }}</li>
    {% endfor %}
  </ul>

  <br />
  <h3>{{ 'members' | i18n }}</h3>
  <table id="members_table">
    <thead>
      <tr>
        <th style="width: 5%">{{ 'country' | i18n }}</th>
        <th style="width: 60%">{{ 'organization_name' | i18n }}</th>
        <th style="width: 15%">{{ 'organization_acronym' | i18n }}</th>
        <th style="width: 20%">{{ 'website' | i18n }}</th>
      </tr>
    </thead>
    <tbody>
      {% for member in collections.members %}
      <tr>
        <td>{{ member.data.country }}</td>
        <td>{{ member.data.name }}</td>
        <td>{{ member.data.acronym }}</td>
        <td>
          {%- if member.data.website.size > 0 -%}<a
            href="{{ member.data.website }}"
            target="_blank"
            rel="nofollow"
            >{{ 'visit_url' | i18n }}</a
          >{%- endif -%}
        </td>
      </tr>
      {% endfor %}
    </tbody>
    <tfoot>
      <td colspan="4">Country</td>
    </tfoot>
  </table>
</article>